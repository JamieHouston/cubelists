<configuration>
  <system.webServer>

    <!-- indicates that the hello.js file is a node.js application 
    to be handled by the iisnode module -->

    <handlers>
      <add name="iisnode" path="scripts/web-server.js" verb="*" modules="iisnode" />
    </handlers>
    <defaultDocument enabled="true">
      <files>
        <add value="scripts/web-server.js" />
      </files>
    </defaultDocument>
    <rewrite>
      <rules>
        <rule name="api">
          <match url="api/*" />
          <action type="Rewrite" url="api/two-way-server.js" />
        </rule>
      </rules>
    </rewrite> 
  </system.webServer>
</configuration>